<?xml version="1.0" encoding="UTF-8"?>

<!DOCTYPE hibernate-mapping PUBLIC
        "-//Hibernate/Hibernate Mapping DTD 3.0//EN"
        "http://www.hibernate.org/dtd/hibernate-mapping-3.0.dtd">

<hibernate-mapping package="basicApplication.dataClass">

	<class name="ActorHibernateBasic" table="actor">
		<id name="ID" type= "integer" column="actor_id">
			<generator class="increment" />
		</id>
		<property name="date" type="timestamp" column="last_update" />
		<property name="firstName" column="first_name" type="string" />
		<property name="lastName" column="last_name" type="string" />
	</class>

	<!-- 
	<query name="findAllByID">
        <![CDATA[select * from ActorHibernateBasic ac where ac.ID = :ID]]>
	</query>   -->
	<query name="findIDByLastName">
        <![CDATA[select ID from ActorHibernateBasic ac where ac.lastName = :lastName]]>
	</query>
	<query name="findFirstNameByLastName">
		<![CDATA[select firstName from ActorHibernateBasic ac where ac.lastName = :lastName]]>
	</query>
	<query name="getAllUsingLastName">
		<![CDATA[select ID, firstName from ActorHibernateBasic ac where ac.lastName = :lastName]]>
	</query>
</hibernate-mapping>